# Plex Configuration
PLEX_URL=https://your-plex-server:32400
PLEX_TOKEN=your_plex_token_here

# OpenSubtitles Configuration (ALL THREE are required)
OPENSUBTITLES_USERNAME=your_username
OPENSUBTITLES_PASSWORD=your_password_here
OPENSUBTITLES_API_KEY=your_api_key_here  # Get this from opensubtitles.com API Consumers

# Subtitle Settings
SUBTITLES_LANGUAGES=en
SUBTITLES_AUTO_SELECT=true
SUBTITLES_USE_RELEASE_MATCHING=true
SUBTITLES_UPGRADE_ON_PERFECT_MATCH=true

# Server Settings
SERVER_HOST=0.0.0.0
SERVER_PORT=9000
SERVER_WEBHOOK_PATH=/plexsubs
SERVER_DEBUG=false

# Logging Settings
LOG_LEVEL=INFO
LOG_USE_COLORS=true
LOG_JSON_FORMAT=false
# LOG_FILE=/app/logs/webhook.log

# Path Mappings (Plex path -> Local path)
# Format: /plex/path:/local/path,/another:/local
PLEX_PATH_MAPPINGS=/media:/mnt/library

# Discovery Settings
# Enable/disable discovery endpoints (default: true)
DISCOVERY_ENABLED=true
# Run path validation on startup - useful for debugging (default: false)
DISCOVERY_VALIDATE_ON_STARTUP=false
# Specific test file for validation (optional)
# DISCOVERY_TEST_FILE=/mnt/library/movies/test.mkv

# Docker Compose specific
MEDIA_PATH=/mnt/library
